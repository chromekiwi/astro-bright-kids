---
import Logo from '../assets/logo.svg';

type NavItem = {
  title: string;
  link: string;
};

const { settings } = Astro.props;
---

<header class="wrapper bg-loop font-semibold">
  <!-- Wrapper -->
  <div class="bs-container py-6 flex justify-between items-center">
    <!-- Logo -->
    <a
      class="flex xl:min-w-32 group"
      href="/"
      aria-label={settings.title + ' - Logo'}
    >
      <Logo
        class="group-hover:-rotate-180 group-hover:scale-80 transition-transform ease-bs-spring duration-1000"
        height="80"
        width="80"
      />
    </a>

    <!-- Nav -->
    <nav class="hidden col-span-6 md:flex mx-auto self-stretch lg:gap-2">
      <!-- Links -->
      {
        settings.nav.map((item: NavItem) => (
          <a
            class="bs-btn !text-bs-surface-1 !h-fit !bg-transparent before:translate-y-full hover:before:translate-y-0 hover:shadow-lg/5"
            href={item.link}
            aria-label={item.title + ' - Header'}
          >
            {item.title}
          </a>
        ))
      }
    </nav>

    <!-- CTA -->
    <button type="button" class="min-w-32 bs-btn" onclick="demo.showModal()">
      {settings.cta.title}
    </button>
  </div>
</header>
